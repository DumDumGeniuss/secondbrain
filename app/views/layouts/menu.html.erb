<!DOCTYPE html>
<html>
<head>
  <title>SecondBrain</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body id="layout_menu">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    
  <div class="ui inverted sticky teal menu fixed top">
    <div class="ui container">
      <a class="item" href="<%=root_path%>">
        <%= image_tag("icon/second_brain_logo.gif",:id=>"web_logo_img") %>
      </a>
      <div class="ui simple dropdown item">
        Introduce
        <i class="dropdown icon"></i>
        <div class="menu">
          <a href="<%=introduces_member_path%>" class="item">Team Member</a>
          <a class="item">History</a>
          <a class="item">Contact Us</a>
        </div>
      </div>
      <div class="ui simple dropdown item">
        CostManager
        <i class="dropdown icon"></i>
        <div class="menu">
          <a href="<%=cost_managers_path%>" class="item">Your Cost Manager!</a>
          <% if current_user%>
            <a href="<%=cost_menu_cost_managers_path%>" class="item">My Costs</a>
          <% end %>
        </div>
      </div>
      <div class="ui simple dropdown item">
        <a class="item" href="<%= bookmarks_path %>">BookMark</a>
        <i class="dropdown icon"></i>
        <div class="menu">
          <a class="item" href="<%= bookmarks_path %>">Index Page</a>
          <a class="item" href="<%= overview_bookmarks_path %>">Overview</a>
          <a class="item" href="#">My BookMark</a>
          <a class="item" href="<%= new_bookmark_path %>">Add BookMark</a>
        </div>
      </div>
      <div class="right item">
        <div class="center aligned column">
            <% if current_user%>
                <a href="<%=destroy_user_session_path%>" data-method="delete" class="ui red button">
                    <i class="sign out icon"></i>
                    Sign Out
                </a>
            <% else %>
                <a href="<%= new_registration_path(:user)%>" class="ui red button">
                    <i class="signup icon"></i>
                    Sign Up
                </a>
                <a href="<%=new_session_path(:user)%>" class="ui red button">
                    <i class="sign in icon"></i>
                    Sign In
                </a>
            <% end %>
        </div> 
      </div>
    </div>
  </div>
    <div id="main_content" class="ui container">
    <%= yield %>
    </div>
</body>
</html>
