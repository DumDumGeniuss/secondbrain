<!DOCTYPE html>
<html>
<head>
  <title>SecondBrain</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body id="layout_menu">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    
  <div class="ui inverted sticky teal menu fixed top">
    <div class="ui container">
      <a href="<%=root_path%>" class='menu_item ui item'>
        <h2 class="ui center aligned icon header">
          <%= image_tag("icon/second_brain_logo.gif",:id=>"second_brain_img",:class=>'menu_image ui icon') %>
          HomePage
        </h2>
      </a>
      <a href='<%= introduces_member_path %>' id='introduces_menu' class="menu_item ui item">
        <h2 class="ui center aligned icon header">
          <%= image_tag("icon/introduce_logo.gif",:id=>"introduce_logo_img",:class=>'menu_image ui icon') %>
          Introduce
        </h2>
      </a>
      <a href='<%= cost_managers_path %>' id='cost_managers_menu' class="menu_item ui item">
        <h2 class="ui center aligned icon header">
          <%= image_tag("icon/web_logo.png",:id=>"web_logo_img",:class=>'menu_image ui icon') %>
          CostManager
        </h2>
      </a>
      <a href='<%= bookmarks_path %>' id='bookmarks_menu' class="menu_item ui item">
        <h2 class="ui center aligned icon header">
          <%= image_tag("icon/bookmark_logo.gif",:id=>"bookmark_logo_img",:class=>'menu_image ui icon') %>
          BookMark
        </h2>
      </a>

      <div class="right item">
        <div class="center aligned column">
            <% if current_user%>
                <a href="<%=destroy_user_session_path%>" data-method="delete" class="ui red button">
                    <i class="sign out icon"></i>
                    Sign Out
                </a>
            <% else %>
                <a href="<%= new_registration_path(:user)%>" class="ui red button">
                    <i class="signup icon"></i>
                    Sign Up
                </a>
                <a href="<%=new_session_path(:user)%>" class="ui red button">
                    <i class="sign in icon"></i>
                    Sign In
                </a>
            <% end %>
        </div> 
      </div>
    </div>
  </div>
    <div id="main_content" class="ui fluid container">
    <%= yield %>
    </div>
</body>
</html>
