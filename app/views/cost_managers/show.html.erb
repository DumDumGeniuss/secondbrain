<div id='cost_managers_show'>
  <div class='ui center aligned grid'>
    <div class='ui eight wide column'>
      <a href='<%=new_cost_manager_path%>' class='ui green massive button'>
        Create New Cost!
      </a>
      <table class='ui inverted blue table'>
        <thead>
          <tr>
            <th>Cost Type</th>
            <th>For What</th>
            <th>Amount</th>
            <th>Position</th>
          </tr>
        </thead>
        <tbody>
        <% @costs.each do |cost|%>
          <tr>
            <td>
              <%= image_tag("icon/"+cost.cost_type+"_logo.gif")%>
            </td>
            <td>
              <%=cost.cost_for%>
            </td>
            <td>
              <%=cost.amount%>
            </td>
            <td>
              <%=cost.position%>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
