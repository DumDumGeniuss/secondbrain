<div id='cost_managers_new'>
  <div class='ui center aligned grid'>
    <div class='ui six wide left aligned column'>
      <%= form_for @cost, url: {action: "create"}, html: {class: "ui form"} do |f| %>
          <label class='ui teal big label'>Cost Type</label>
          <%= f.text_field :cost_type, value:@cost_type %>
          <label class='ui teal big label'>Cost For</label>
          <%= f.text_field :cost_for %>
          <label class='ui teal big label'>Amount</label>
          <%= f.text_field :amount %>
          <label class='ui teal big label'>Position</label>
          <%= f.text_field :position %>
          <%= f.submit "Create" ,class:'ui teal button'%>
      <% end %>
    </div>
  </div>
</div>
